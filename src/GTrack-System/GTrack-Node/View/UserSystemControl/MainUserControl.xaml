<UserControl x:Class="GTrack_Node.View.UserSystemControl.MainUserControl" mc:Ignorable="d" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTrack_Node.View.UserSystemControl"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <GroupBox Header="Подключение к серверу управления" Margin="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="IP сервера" VerticalAlignment="Center"/>
                        <TextBox Width="150" Margin="5"/>
                        <TextBlock Text="Порт" VerticalAlignment="Center"/>
                        <TextBox Width="50" Margin="5"/>
                        <Button Content="Подключиться" Width="120" Margin="5"/>
                    </StackPanel>
                    <TextBlock Text="Состояние: подключено" Foreground="Green" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Сервер GTrack-Node" Margin="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Локальный IP" VerticalAlignment="Center"/>
                        <TextBox Width="150" Margin="5"/>
                        <TextBlock Text="Порт" VerticalAlignment="Center"/>
                        <TextBox Width="50" Margin="5"/>
                        <Button Content="Запуск" Width="120" Margin="5"/>
                    </StackPanel>

                    <TextBlock Text="Состояние: подключено" Foreground="Green" Margin="5"/>

                    <TextBlock Text="Список подключенных GTrack-Station:" Margin="5" />

                    <ListBox Margin="5">
                        <ListBoxItem>ID_01001 [192.168.0.10:876]</ListBoxItem>
                        <ListBoxItem>ID_01000 [192.168.0.10:543]</ListBoxItem>
                    </ListBox>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <GroupBox Header="Текущее наблюдение" Grid.Row="0" Grid.Column="1" Margin="10">
                <StackPanel Margin="5">
                    <TextBlock Text="Станция: ID_01001"/>
                    <TextBlock Text="Спутник: ReshUCube-2 (RS37S)"/>
                    <TextBlock Text="Следующий сеанс: 2025/03/11 05:04:24 UTC"/>
                    <TextBlock Text="Azimuth: 180.58 град."/>
                    <TextBlock Text="Elevation: -20.36 град."/>
                    <TextBlock Text="Slant Range: 8452 км"/>
                    <TextBlock Text="Altitude: 534 км"/>
                    <TextBlock Text="Doppler: -54 Гц"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
