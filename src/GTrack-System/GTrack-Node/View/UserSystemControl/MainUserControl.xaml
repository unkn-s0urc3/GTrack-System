<UserControl x:Class="GTrack_Node.View.UserSystemControl.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <GroupBox Header="Подключение к серверу управления" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="IP сервера" VerticalAlignment="Center"/>
                        <TextBox Text="" Width="150" Margin="5"/>
                        <TextBlock Text="Порт" VerticalAlignment="Center"/>
                        <TextBox Text="" Width="50" Margin="5"/>
                        <Button Content="Подключиться" Width="100" Margin="5"/>
                    </StackPanel>
                    <TextBlock Text="Состояние: подключено" Foreground="{StaticResource ActiveBrush}" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Сервер GTrack-Node" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Локальный IP" VerticalAlignment="Center"/>
                        <TextBox Text="" Width="150" Margin="5"/>
                        <TextBlock Text="Порт" VerticalAlignment="Center"/>
                        <TextBox Text="" Width="50" Margin="5"/>
                        <Button Content="Запуск" Width="100" Margin="5"/>
                    </StackPanel>
                    <TextBlock Text="Состояние: подключено" Foreground="{StaticResource ActiveBrush}" Margin="5"/>
                    <TextBlock Text="Список подключенных GTrack-Station:" Margin="5" />
                    <ListBox Height="200" ScrollViewer.CanContentScroll="True" Margin="5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <GroupBox Header="Текущее наблюдение" Grid.Column="1" 
                  VerticalAlignment="Top" Margin="5">
            <StackPanel Margin="5">
                <TextBlock Text="Станция: ID_01001"/>
                <TextBlock Text="Спутник: ReshUCube-2 (RS37S)"/>
                <TextBlock Text="Следующий сеанс: 2025/03/11 05:04:24 UTC"/>
                <TextBlock Text="Azimuth: 180.58 град."/>
                <TextBlock Text="Elevation: -20.36 град."/>
                <TextBlock Text="Slant Range: 8452 км"/>
                <TextBlock Text="Altitude: 534 км"/>
                <TextBlock Text="Doppler: -54 Гц"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>