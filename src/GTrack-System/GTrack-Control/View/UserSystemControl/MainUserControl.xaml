<UserControl x:Class="GTrack_Control.View.UserSystemControl.MainUserControl" mc:Ignorable="d" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTrack_Control.View.UserSystemControl"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <GroupBox Header="Сервер GTrack-Control" Margin="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Локальный IP" VerticalAlignment="Center" />
                        <TextBox Width="150" Margin="5" Text="172.16.5.1" />
                        <TextBlock Text="Порт" VerticalAlignment="Center" />
                        <TextBox Width="80" Margin="5" Text="2121" />
                        <Button Content="Запуск" Margin="5" />
                    </StackPanel>
                    <TextBlock Text="Состояние: подключено [192.168.0.1]" Foreground="Green" Margin="5" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Сервер Houston" Margin="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Локальный IP" VerticalAlignment="Center" />
                        <TextBox Width="150" Margin="5" Text="172.16.5.1" />
                        <TextBlock Text="Порт" VerticalAlignment="Center" />
                        <TextBox Width="80" Margin="5" Text="2121" />
                        <Button Content="Запуск" Margin="5" />
                    </StackPanel>
                    <TextBlock Text="Состояние: ожидание подключения" Foreground="Orange" Margin="5" />
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <GroupBox Header="Управление" Margin="10">
                <StackPanel>
                    <TextBlock Text="Выбор управляемой GTrack-Station" Margin="5" />
                    <ListBox Margin="5">
                        <ListBoxItem Content="ID 01001 [192.168.0.10:876]" />
                        <ListBoxItem Content="ID 01000 [192.168.0.10:543]" />
                    </ListBox>
                    <Button Content="Принять" Margin="5" />

                    <TextBlock Text="Текущее наблюдение:" Margin="5" />
                    <TextBlock Text="ReshUCube-2 (RS37S)" Foreground="Green" Margin="5" />
                    <Button Content="Загрузить TLE" Margin="5" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
